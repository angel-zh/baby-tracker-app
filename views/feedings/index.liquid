{% block content %}
    <div class="card mb-4 shadow">
        <div class="card-body">
            <h4>{{ feeding.time }} Feeding</h4>
            <h5>
                {% if feeding.bottle == true and feeding.breast == true %}
                    Bottlefed & breastfed 
                {% elsif feeding.bottle == true and feeding.breast != true %}
                    Bottlefed 
                {% elsif feeding.bottle != true and feeding.breast == true %}
                    Breastfed 
                {% endif %}
                {{ feeding.amount }} oz
            </h5>
            {% if feeding.memo != '' %}
            <p>Memo: {{ feeding.memo }}</p>
            {% endif %}
            <small><i>{{ feeding.date | date: "%a, %b %d, %y" }}</i></small>
            <div class="d-flex justify-content-between">
                {% if feeding.parent == userId %}
                    <a href="/feedings/{{baby.id}}/{{feeding.id}}/edit" class="btn btn-primary">Edit</a>
                    <form action="/feedings/delete/{{baby.id}}/{{feeding.id}}?_method=DELETE" method="POST">
                        <input class="btn btn-danger btn-sm" type="submit" value="Delete">
                    </form>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}