{% layout 'layout.liquid' %}
{% block content %}
<div class="container-sm">
    <form action="/babies/{{baby.id}}?_method=PUT" method="POST">
        <fieldset>
            <legend>Edit your baby's profile:</legend>
            <label class="form-label">First Name: </label>
            <input 
                type="text" 
                name="firstName" 
                placeholder="Last Name: "
                value="{{ baby.firstName }}"
                class="form-control"
            >
            <label class="form-label">Last Name: </label>
            <input 
                type="text" 
                name="lastName" 
                placeholder="{{ baby.lastName }}" 
                value="{{ baby.lastName }}" 
                class="form-control"
            >
            <label class="form-label">Date of Birth: </label>
            <input 
                type="date" 
                name="dateOfBirth"
                value="{{ baby.dateOfBirth }}"
                class="form-control"
                required
            >
            Gender: 
            <label class="form-label">Girl</label>
            <input 
                type="radio" 
                name="gender"
                value="Girl" 
                class="form-check-input"
                {% if baby.gender == 'Girl' %}
                    checked
                {% endif %}
            >
            <label class="form-label">Boy</label>
            <input 
                type="radio" 
                name="gender"
                value="Boy" 
                class="form-check-input"
                {% if baby.gender == 'Boy' %}
                    checked
                {% endif %}
            >
        </fieldset>
        <input type="submit" value="Edit Profile" class="btn btn-success">
    </form>
</div>
{% endblock %}