{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>{{ baby.firstName }} {{ baby.lastName }}</h2>
        <h3>{{ baby.gender }}</h3>
        <h6>Date Of Birth: {{ baby.dateOfBirth }}</h6>
        {% if baby.parent == userId %}
        <div class="btn-group">
            <a href="/babies/{{ baby.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/babies/{{ baby.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
</div>
{% endblock %}