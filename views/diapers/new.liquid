{% block content %}

    <div class="modal fade" id="diaperstaticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">New Diaper Change</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/diapers/{{baby.id}}" method="POST">
                        <fieldset>
                            <label class="form-label">Date:</label>
                            <input class="form-control" type="date" name="date" value="{{ "now" | date: "%Y-%m-%d" }}">
                            <label class="form-label">Time:</label>
                            <input class="form-control" type="time" name="time" value="{{ "now" | date: "%H:%M" }}">
                            <label class="form-label mt-1">Pee</label>
                            <input class="form-check-input mt-2" type="checkbox" name="pee">&nbsp;
                            <label class="form-label mt-1">Poop</label>
                            <input class="form-check-input mt-2" type="checkbox" name="poop"><br>
                            <label class="form-label">Memo: </label>
                            <input class="form-control" type="text" name="memo" placeholder="(optional)">
                        </fieldset>
                        <div class="modal-footer">
                            <input class="btn btn-warning mt-2 text-light" type="submit" value="Add Diaper Change">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}