{% layout 'layout.liquid' %}
{% block content %}
<div class="container-sm d-flex justify-content-center mt-5">
    <form action="/diapers/{{baby.id}}/{{theDiaper.id}}?_method=PUT" method="POST">
        <fieldset>
            <legend>Edit Diaper Log</legend>
            <label class="form-label">Date:</label>
            <input 
                class="form-control" 
                type="date" 
                name="date" 
                value="{{ theDiaper.date | date: "%Y-%m-%d" }}"
            >
            <label class="form-label">Time:</label>
            <input 
                class="form-control" 
                type="time" 
                name="time" 
                value="{{ theDiaper.time | date: "%H:%M" }}"
            >
            <label class="form-label mt-1">Pee</label>
            <input 
                class="form-check-input mt-2" 
                type="checkbox" 
                name="pee"
                {% if theDiaper.pee %}
                checked 
                {% endif %}
            >
            <label class="form-label mt-1">Poop</label>
            <input 
                class="form-check-input mt-2" 
                type="checkbox" 
                name="poop" 
                {% if theDiaper.poop %}
                checked 
                {% endif %}
            >
            <br>
            <label class="form-label">Memo: </label>
            <input 
                class="form-control" 
                type="text" 
                name="memo"
                placeholder="(optional)" 
                value="{{ theDiaper.memo }}"
            >
        </fieldset>
        <input class="btn btn-primary mt-2" type="submit" value="Update">
        <a href="/babies/{{baby.id}}" class="btn btn-outline-primary mt-2">Back</a>
    </form>
</div>
{% endblock %}