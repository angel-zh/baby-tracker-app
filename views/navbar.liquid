{% block content %}
<nav class="navbar navbar-expand-md navbar-dark shadow-sm mb-3" style="background-color: #73ceb1;">
    <div class="container-fluid">
        <a href="/" class="navbar-brand fs-2">
            <img src="https://i.imgur.com/UCnJcwJ.png" alt="Logo" width="38" height="38" class="d-inline-block align-text-top">
            LilBean
        </a>
        {% if loggedIn %}
        <span class="navbar-text ms-3 me-2 text-light fs-5">
            <i>Hi {{ username }}!</i>
        </span>
        {% else %}
        <span class="navbar-text ms-3 me-2 text-light fs-5">
            Baby Tracker | <small>Sign up to access app features</small>
        </span>
        {% endif %}
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            {% if loggedIn %}
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="/babies" class="nav-link text-light fs-5 text-nowrap ms-1">My Babies</a>
                </li>
                <li class="nav-item">
                    <a href="/babies/new" class="nav-link text-light fs-5 text-nowrap ms-1">New Baby</a>
                </li>
                <li class="nav-item">
                    <a href="/" class="nav-link text-light fs-5 ms-1 text-nowrap">Baby Milestones</a>
                </li>
            </ul>
            <div class="container-fluid d-flex justify-content-end">
                <a href="/auth/logout" class="btn btn-outline-light"><i class="fa-solid fa-right-from-bracket"></i> Log Out</a>
            </div>
           {% else %}
            <div class="container-fluid d-flex justify-content-end">
                <a href="/auth/signup" class="btn btn-outline-light mx-2"><i class="fa-solid fa-pencil"></i> Sign Up</a>
                <a href="/auth/login" class="btn btn-outline-light"><i class="fa-solid fa-user"></i> Log In</a>
            {% endif %}
            </div>
        </div>
    </div>
</nav>
{% endblock %}