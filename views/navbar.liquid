                <li class="nav-item">
                    <a href="/" class="nav-link text-light fs-5 ms-1 text-nowrap">Baby Milestones</a>
                </li>
            </ul>
            <div class="container-fluid d-flex justify-content-end">
                <a href="/auth/logout" class="btn btn-outline-light">Log Out</a>
            </div>
           {% else %}
            <div class="container-fluid d-flex justify-content-end">
                <a href="/auth/signup" class="btn btn-outline-light mx-2">Sign Up</a>
                <a href="/auth/login" class="btn btn-outline-light">Log In</a>
            {% endif %}
            </div>
        </div>
    </div>
</nav>
