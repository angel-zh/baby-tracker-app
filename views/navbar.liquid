{% block content %}
<nav class="navbar navbar-expand-md navbar-dark shadow-sm mb-3" style="background-color: #73ceb1;">
    <div class="container-fluid">
        <a href="/" class="navbar-brand fs-2">LilBean</a>
        {% if loggedIn %}
        <span class="navbar-text ms-3 me-2 text-light fs-5">
            Hi {{ username }}!
          </span>
        {% endif %}
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            {% if loggedIn %}
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="/babies" class="nav-link text-light fs-5 text-nowrap ms-1">My Babies</a>
                </li>
                <li class="nav-item">
                    <a href="/babies/new" class="nav-link text-light fs-5 text-nowrap ms-1">New Baby</a>
